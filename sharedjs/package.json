{
    "name": "sharedjs",
    "version": "1.0.0",
    "description": "Node.js for JWT Authentication with Postgres",
    "main": "server.js",
    "type": "module",
    "keywords": [
        "node js",
        "jwt",
        "authentication",
        "express",
        "postgresql"
    ],
    "author": "",
    "license": "ISC",
    "eslintConfig": {
        "extends": [],
        "env": {
            "es6": true,
            "node": true
        },
        "parser": "@typescript-eslint/parser",
        "parserOptions": {
            "requireConfigFile": false,
            "ecmaVersion": 2020,
            "sourceType": "module",
            "ecmaFeatures": {
                "jsx": true
            },
            "project": "./tsconfig.json"
        },
        "rules": {
            "no-undef": [
                "error"
            ],
            "no-const-assign": [
                "error"
            ],
            "for-direction": [
                "error"
            ],
            "max-lines-per-function": [
                "warn",
                130
            ],
            "no-dupe-args": [
                "error"
            ],
            "use-isnan": [
                "error"
            ],
            "no-self-assign": [
                "error"
            ],
            "no-constant-condition": [
                "warn"
            ],
            "no-unsafe-negation": [
                "error"
            ],
            "no-unsafe-optional-chaining": [
                "error"
            ],
            "no-sparse-arrays": [
                "warn"
            ],
            "no-duplicate-case": [
                "warn"
            ],
            "@typescript-eslint/no-floating-promises": 1
        },
        "globals": {},
        "plugins": [
            "@typescript-eslint"
        ]
    },
    "devDependencies": {
        "eslint": "^8.57.0",
        "i": "^0.3.7",
        "nodemon": "^2.0.22",
        "npm": "^9.8.1",
        "typescript": "^5.3.3",
        "typescript-eslint": "^7.0.1"
    },
    "dependencies": {
        "yup": "^1.4.0"
    }
}
